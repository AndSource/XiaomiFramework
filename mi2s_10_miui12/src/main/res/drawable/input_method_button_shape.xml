<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/input_method_switch_settings_layout_press_color"/>
            <corners android:radius="@dimen/input_method_button_corners"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/input_method_switch_settings_layout_no_press_color"/>
            <corners android:radius="@dimen/input_method_button_corners"/>
        </shape>
    </item>
</selector>
