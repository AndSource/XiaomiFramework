    </LinearLayout>
    <FrameLayout android:gravity="bottom" android:id="@+id/am_ad_divider" android:background="@color/app_manager_white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/app_manager_line_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/am_line_height" android:layout_marginTop="@dimen/am_sperator_line_margin_top" android:layout_marginBottom="@dimen/am_sperator_line_margin_top" android:layout_marginStart="@dimen/am_line_margin_lr" android:layout_marginEnd="@dimen/am_line_margin_lr"/>
    </FrameLayout>
</LinearLayout>
