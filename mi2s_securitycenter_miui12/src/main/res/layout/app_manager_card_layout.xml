<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/am_card_bg_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/am_list_item_height" android:paddingStart="@dimen/am_line_margin_lr" android:paddingEnd="@dimen/am_line_margin_lr">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/am_icon" android:layout_width="@dimen/am_list_item_icon_size" android:layout_height="@dimen/am_list_item_icon_size"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="11dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/am_list_item_title_size" android:textStyle="bold" android:textColor="@color/app_manager_list_title_color" android:id="@+id/am_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            <ImageView android:layout_gravity="center" android:id="@+id/am_isRunning_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/am_card_item_running" android:layout_marginStart="@dimen/am_list_running_icon_margin_left"/>
            <ImageView android:layout_gravity="center" android:id="@+id/am_isDisable_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/am_card_item_disabled" android:layout_marginStart="@dimen/am_list_running_icon_margin_left"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/am_usage_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/am_card_item_memory" android:layout_marginEnd="5dp"/>
                <TextView android:textSize="@dimen/am_list_item_summary_size" android:textColor="@color/app_manager_list_summary_color" android:id="@+id/am_usage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="@dimen/am_list_item_storage_margin_left">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/am_card_item_storage"/>
                <TextView android:textSize="@dimen/am_list_item_summary_size" android:textColor="@color/app_manager_list_summary_color" android:id="@+id/am_storage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
