<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:securitycenter="http://schemas.android.com/apk/res/com.miui.securitycenter" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/gb_settings_second_level_action_bar"/>
    <miuix.springback.view.SpringBackLayout android:layout_width="match_parent" android:layout_height="match_parent" app:scrollableView="@+id/scroll_view">
        <androidx.core.widget.NestedScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_dimen_25" android:text="@string/function_shield_settings_title" android:layout_marginStart="@dimen/view_dimen_152" android:layout_marginEnd="@dimen/gb_setting_item_padding_end" style="@style/GBSettingItemSubtitle"/>
                <View android:background="@drawable/gb_settings_divider_land" android:layout_width="match_parent" android:layout_height="@dimen/view_dimen_2" android:layout_marginTop="@dimen/view_dimen_29" android:layout_marginStart="@dimen/view_dimen_122" android:layout_marginEnd="@dimen/view_dimen_68"/>
                <com.miui.gamebooster.widget.CheckBoxSettingItemView android:id="@+id/autoBrightnessSettingItem" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_dimen_76" app:gbsiTitle="@string/function_shield_auto_bright"/>
                <com.miui.gamebooster.widget.CheckBoxSettingItemView android:id="@+id/readModeSettingItem" android:layout_width="match_parent" android:layout_height="wrap_content" app:gbsiTitle="@string/function_shield_eye_shield"/>
                <com.miui.gamebooster.widget.CheckBoxSettingItemView android:id="@+id/screenshotSettingItem" android:layout_width="match_parent" android:layout_height="wrap_content" app:gbsiTitle="@string/function_shield_three_finger"/>
                <com.miui.gamebooster.widget.CheckBoxSettingItemView android:id="@+id/notificationBarSettingItem" android:layout_width="match_parent" android:layout_height="wrap_content" app:gbsiTitle="@string/function_shield_pull_notification_bar"/>
                <com.miui.gamebooster.widget.CheckBoxSettingItemView android:id="@+id/voiceTriggerSettingItem" android:layout_width="match_parent" android:layout_height="wrap_content" app:gbsiTitle="@string/function_shield_voice_trigger"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </miuix.springback.view.SpringBackLayout>
</LinearLayout>
