<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:securitycenter="http://schemas.android.com/apk/res/com.miui.securitycenter" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/view_dimen_160" android:layout_marginTop="@dimen/pc_status_bar_margin_top" android:paddingStart="@dimen/ew_alert_card_detail_margin_start" android:paddingEnd="@dimen/ew_alert_card_detail_margin_start">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/cancel" android:background="0x1002004f" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@android:string/cancel" android:layout_marginStart="@dimen/editor_title_button_margin"/>
        <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/ew_alert_card_detail_text_size" android:textColor="@color/ew_text_black_color" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ew_emergency_edit_title" android:singleLine="true"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/ok" android:background="0x10020051" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@android:string/ok" android:layout_marginEnd="@dimen/editor_title_button_margin"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:paddingStart="@dimen/view_dimen_30" android:paddingEnd="@dimen/view_dimen_30">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <EditText android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_name" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/birthday" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_birthday" android:cursorVisible="false" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/idcard" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_idcard" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/blood_type" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_blood_type" android:cursorVisible="false" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/allergy" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_input_allergy" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/medicine" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_input_medicine" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/medical" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_input_medical" style="@style/StyleEmergencyEditText"/>
                <EditText android:id="@+id/organ_donation" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ew_emergency_organ_donation" android:cursorVisible="false" style="@style/StyleEmergencyEditText"/>
                <TextView android:textSize="@dimen/text_font_size_33" android:textColor="@color/ew_emergency_privency_text_normal" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ew_main_switch_margin_start" android:layout_marginBottom="@dimen/ew_main_switch_margin_start" android:text="@string/ew_emergency_privacy" android:layout_marginStart="@dimen/ew_main_padding_start" android:layout_marginEnd="@dimen/ew_main_padding_start"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
