<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:securitycenter="http://schemas.android.com/apk/res/com.miui.securitycenter" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_container" android:background="@drawable/ew_list_card_unreceive" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ew_list_card_margin_bottom" android:minHeight="@dimen/ew_list_unreceive_card_height" android:layout_marginStart="@dimen/ew_list_card_margin_start" android:layout_marginEnd="@dimen/ew_list_card_margin_start">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/container_alert_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ew_list_card_padding" android:layout_marginStart="@dimen/ew_alert_card_detail_margin_start" android:layout_marginEnd="@dimen/ew_alert_card_detail_margin_start">
