                <View android:background="@color/ew_alert_card_split_color" android:layout_width="@dimen/ew_alert_close_bg_stroke" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ew_help_detail_text_margin" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="@dimen/ew_alert_card_level_text_size" android:textColor="@color/ew_alert_white_color" android:id="@+id/alert_level_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="@dimen/text_font_size_36" android:textColor="@color/ew_alert_white_color" android:gravity="center" android:id="@+id/alert_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                <View android:background="@color/ew_alert_card_split_color" android:layout_width="@dimen/ew_alert_close_bg_stroke" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ew_help_detail_text_margin" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
