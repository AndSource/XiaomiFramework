                <View android:background="@color/ew_alert_card_split_color" android:layout_width="@dimen/ew_alert_close_bg_stroke" android:layout_height="match_parent" android:layout_marginTop="@dimen/ew_help_detail_text_margin" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
