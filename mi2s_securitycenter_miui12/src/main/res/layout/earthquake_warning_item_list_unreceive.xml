                <TextView android:textSize="@dimen/text_font_size_36" android:textColor="@color/ew_list_card_text_gray" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ew_alert_earthquake_center_title" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
