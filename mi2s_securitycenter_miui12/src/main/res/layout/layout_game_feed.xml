<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:securitycenter="http://schemas.android.com/apk/res/com.miui.securitycenter" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/feedContainer" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/coloredBgView" android:background="@color/baseBg" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/guideContainer" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/spacing_60">
        <ImageView android:layout_gravity="bottom" android:id="@+id/arrowUp" android:layout_width="match_parent" android:layout_height="@dimen/dp_25dp" android:src="@drawable/game_feed_guide_arrow_up"/>
        <TextView android:textSize="22dp" android:textStyle="bold" android:textColor="#222222" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/feedTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/user_guide_title" android:fontFamily="sans-serif-condensed-medium" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:letterSpacing="0.01"/>
