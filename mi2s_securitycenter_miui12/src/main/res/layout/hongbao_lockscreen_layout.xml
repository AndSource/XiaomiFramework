            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/later" android:padding="@dimen/lock_screen_close_button_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/lock_screen_close_button" android:contentDescription="@string/lucky_money_close"/>
