        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lock_screen_hongbao_message_top_margin">
            <TextView android:textSize="@dimen/lock_screen_hongbao_message_size" android:textColor="@color/lock_screen_hongbao_message_color" android:gravity="center" android:id="@+id/description" android:layout_width="@dimen/lock_screen_hongbao_message_width" android:layout_height="wrap_content" android:singleLine="true"/>
