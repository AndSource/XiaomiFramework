<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:securitycenter="http://schemas.android.com/apk/res/com.miui.securitycenter" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <TextView android:id="@+id/left_precent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/left_precent" android:layout_alignParentStart="true"/>
        <TextView android:id="@+id/right_precent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/right_precent" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <miui.widget.SeekBar android:id="@+id/seekbar" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/textview_precent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true"/>
        <TextView android:id="@+id/textview_warn_traffic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:layout_toEndOf="@+id/textview_precent"/>
    </RelativeLayout>
</LinearLayout>
