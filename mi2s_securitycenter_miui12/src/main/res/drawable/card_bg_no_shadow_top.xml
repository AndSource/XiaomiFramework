<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg_tb_color"/>
            <padding android:top="@dimen/card_layout_line_height_half"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg_stroke_color"/>
            <corners android:topLeftRadius="@dimen/card_bg_no_shadow_radius" android:topRightRadius="@dimen/card_bg_no_shadow_radius" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item android:left="@dimen/card_bg_no_shadow_stroke_width" android:top="@dimen/card_bg_no_shadow_stroke_width" android:right="@dimen/card_bg_no_shadow_stroke_width">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/card_bg_no_shadow_radius" android:topRightRadius="@dimen/card_bg_no_shadow_radius" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/card_bg_color"/>
        </shape>
    </item>
</layer-list>
